<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Test Suite" parallel="tests"
	thread-count="25" data-provider-thread-count="2">

	<listeners>
		<listener
			class-name="org.selenium.listeners.AnnotationTransformer"></listener>
		<listener class-name="org.selenium.listeners.ListenerClass"></listener>
	</listeners>

	<!-- thread-count="2" -->
	<!--These values are coming from Maven command (Configured in pom.xml) -->
	<test parallel="methods"
		name="Regression Tests execution over Chrome 
		Browser">
		<parameter name="browser" value="CHROME"></parameter>
		<packages>
			<package name="org.selenium.tests.Extent"></package>
		</packages>
	</test>
	<test parallel="methods"
		name="Regression Tests execution over Firefox 
		Browser">
		<parameter name="browser" value="FIREFOX"></parameter>
		<packages>
			<package name="org.selenium.tests.Extent"></package>
		</packages>
	</test>
	<test parallel="methods"
		name="Regression Tests execution over Edge 
		Browser">
		<parameter name="browser" value="EDGE"></parameter>
		<packages>
			<package name="org.selenium.tests.Extent"></package>
		</packages>
	</test>
	<test parallel="methods"
		name="Regression Tests execution over Opera 
		Browser">
		<parameter name="browser" value="OPERA"></parameter>
		<packages>
			<package name="org.selenium.tests.Extent"></package>
		</packages>
	</test>

</suite> <!-- Suite -->
